{
    "kind": "collectionType",
    "collectionName": "posts",
    "info": {
        "singularName": "post",
        "pluralName": "posts",
        "displayName": "Post",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "content": {
            "type": "text",
            "required": true
        },
        "tagline": {
            "type": "string"
        },
        "cover_image": {
            "type": "media",
            "multiple": false,
            "required": false
        },
        "published_at": {
            "type": "timestamp",
            "required": true
        },
        "is_published": {
            "type": "boolean",
            "default": false
        },
        "is_deleted": {
            "type": "boolean",
            "default": false
        },
        "bookmarks": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::bookmark.bookmark",
            "mappedBy": "post"
        }
    }
}
